{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "globalEnv": [
    "NEXT_PUBLIC_SUPABASE_URL",
    "NEXT_PUBLIC_SUPABASE_ANON_KEY",
    "VITE_SUPABASE_URL",
    "VITE_SUPABASE_ANON_KEY"
  ],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "@myapp/mobile#build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", "android/app/build/**", "ios/App/build/**"]
    },
    "@myapp/desktop#build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", "src-tauri/target/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}